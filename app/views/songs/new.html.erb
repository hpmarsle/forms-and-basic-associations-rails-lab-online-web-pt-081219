<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />
  
  <%= f.fields_for :notes do |n_form| %>
    <%= n_form.label :note %>
    <%= n_form.text_area :content, rows: 4, cols: 30 %>
  <% end %>

  <%= f.submit %>
<% end %>


